<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/task_item_name"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        style="@style/TextFieldStyle"
        android:text="Nazwa zadania" />

    <TextView
        android:id="@+id/task_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/task_item_name"
        android:layout_marginTop="4dp"
        style="@style/DataFieldStyle"
        android:text="data zadania" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"

        android:layout_marginRight="72dp"
        android:padding="@dimen/task_item_padding"
        tools:srcCompat="@drawable/ic_check_box_outline_blank" />

</RelativeLayout>
